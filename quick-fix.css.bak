/* Z√ÅKLADN√â ≈†T√ùLY */
body {
  margin: 0;
  font-family: 'Orbitron', 'Arial', sans-serif;
  background: #0a0a0a;
  color: #ffffff;
  min-height: 100vh;
}

/* LAYOUT */
.app-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #0a0a0a;
  padding: 10px;
}

.main-layout {
  flex: 1;
  display: grid;
  grid-template-columns: 1fr 350px;
  gap: 20px;
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
  height: calc(100vh - 40px);
}

@media (max-width: 1200px) {
  .main-layout {
    grid-template-columns: 1fr 320px;
  }
}

@media (max-width: 900px) {
  .main-layout {
    grid-template-columns: 1fr 280px;
  }
}

@media (max-width: 650px) {
  .main-layout {
    grid-template-columns: 1fr;
    gap: 10px;
    height: auto;
  }
}

/* GAME AREA */
.game-area {
  background: #0a0a0a;
  border: 2px solid #39ff14;
  border-radius: 15px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 15px;
  height: 100%;
  overflow-y: auto;
}

/* TLAƒå√çTKA */
.btn {
  padding: 12px 24px;
  border: 2px solid #39ff14;
  background: transparent;
  color: #39ff14;
  border-radius: 8px;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
}

.btn:hover {
  background: #39ff14;
  color: #0a0a0a;
  box-shadow: 0 0 15px #39ff14;
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-primary { border-color: #39ff14; color: #39ff14; }
.btn-secondary { border-color: #00bfff; color: #00bfff; }
.btn-warning { border-color: #ff8c00; color: #ff8c00; }
.btn-danger { border-color: #ff0040; color: #ff0040; }

/* HR√ÅƒåI */
.players-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 15px;
  margin: 15px 0;
}

.player {
  background: rgba(0, 0, 0, 0.8);
  border: 2px solid #39ff14;
  border-radius: 15px;
  padding: 15px;
  text-align: center;
  transition: all 0.3s ease;
}

.player.active {
  transform: scale(1.05);
  border-color: #ff8c00;
  box-shadow: 0 0 20px rgba(255, 140, 0, 0.5);
}

.player-head {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 0 auto 10px;
  overflow: hidden;
  border: 3px solid currentColor;
}

.player-head img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.player-name {
  font-weight: bold;
  margin-bottom: 8px;
}

.player-score {
  font-size: 18px;
  font-weight: bold;
  color: #00bfff;
}

/* BARVY HR√ÅƒåOV */
.human-player { border-color: #39ff14; color: #39ff14; }
.gemini-player { border-color: #00bfff; color: #00bfff; }
.chatgpt-player { border-color: #ff1493; color: #ff1493; }
.claude-player { border-color: #ff8c00; color: #ff8c00; }

/* KOSTKY */
.dice-container {
  display: flex;
  justify-content: center;
  gap: 10px;
  flex-wrap: wrap;
  margin: 20px 0;
  min-height: 80px;
  align-items: center;
}

.dice {
  width: 60px;
  height: 60px;
  background: #0a0a0a;
  border: 2px solid #39ff14;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  font-weight: bold;
  color: #39ff14;
  cursor: pointer;
  transition: all 0.3s ease;
}

.dice:hover {
  border-color: #ff8c00;
  color: #ff8c00;
  box-shadow: 0 0 15px #ff8c00;
  transform: scale(1.05);
}

.dice.selected {
  border-color: #00bfff;
  color: #00bfff;
  box-shadow: 0 0 20px #00bfff;
  background: rgba(0, 191, 255, 0.1);
}

/* CHAT */
.chat-panel {
  background: #0a0a0a;
  border: 2px solid #39ff14;
  border-radius: 15px;
  padding: 15px;
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.chat-toggle {
  position: absolute;
  top: 10px;
  right: 10px;
  background: #39ff14;
  color: #0a0a0a;
  border: none;
  border-radius: 50%;
  width: 35px;
  height: 35px;
  font-weight: bold;
  font-size: 18px;
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 10;
  box-shadow: 0 0 10px #39ff14;
}

.chat-toggle:hover {
  background: #00ffff;
  transform: scale(1.1);
  box-shadow: 0 0 20px #00ffff;
}

.chat-header h2 {
  margin: 0 40px 15px 0;
  color: #39ff14;
  text-align: center;
  font-size: 18px;
  text-shadow: 0 0 10px #39ff14;
}

.chat-messages {
  flex: 1;
  overflow-y: auto;
  background: rgba(0, 0, 0, 0.5);
  border: 1px solid #39ff14;
  border-radius: 8px;
  padding: 10px;
  margin-bottom: 15px;
  scrollbar-width: thin;
  scrollbar-color: #39ff14 #0a0a0a;
}

.chat-messages::-webkit-scrollbar {
  width: 6px;
}

.chat-messages::-webkit-scrollbar-track {
  background: #0a0a0a;
}

.chat-messages::-webkit-scrollbar-thumb {
  background: #39ff14;
  border-radius: 3px;
}

.chat-input {
  display: flex;
  gap: 10px;
  align-items: center;
}

.chat-input input {
  flex: 1;
  padding: 12px;
  background: #1a1a1a;
  border: 2px solid #39ff14;
  border-radius: 8px;
  color: #ffffff;
  font-size: 14px;
}

.chat-input input:focus {
  outline: none;
  border-color: #00ffff;
  box-shadow: 0 0 15px #00ffff;
}

.chat-send-btn {
  padding: 12px;
  background: transparent;
  border: 2px solid #39ff14;
  color: #39ff14;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  width: 45px;
  height: 45px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.chat-send-btn:hover {
  background: #39ff14;
  color: #0a0a0a;
  box-shadow: 0 0 15px #39ff14;
}

.chat-send-btn::before {
  content: "‚û§";
  font-weight: bold;
}

/* Chat collapsed state */
.chat-panel.collapsed {
  width: 60px;
  padding: 10px;
}

.chat-panel.collapsed .chat-header,
.chat-panel.collapsed .chat-messages,
.chat-panel.collapsed .chat-input {
  display: none;
}

.chat-panel.collapsed .chat-toggle {
  position: relative;
  top: auto;
  right: auto;
  margin: 20px auto;
  display: block;
}

/* OVL√ÅDANIE */
.game-controls {
  background: rgba(0, 0, 0, 0.8);
  border: 2px solid #39ff14;
  border-radius: 15px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.turn-info {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  color: #39ff14;
  margin-bottom: 10px;
  text-shadow: 0 0 15px #39ff14;
}

.current-turn-score {
  text-align: center;
  font-size: 16px;
  color: #00ffff;
  margin-bottom: 10px;
  text-shadow: 0 0 10px #00ffff;
}

.target-info {
  text-align: center;
  font-size: 14px;
  color: #39ff14;
  margin-bottom: 15px;
}

.roll-controls {
  display: flex;
  justify-content: center;
  gap: 10px;
  flex-wrap: wrap;
}

/* UTILITY */
.hidden {
  display: none !important;
}

.game-title {
  text-align: center;
  font-size: 32px;
  font-weight: 900;
  color: #39ff14;
  margin-bottom: 20px;
  text-shadow: 0 0 20px #39ff14;
}

/* SETUP */
.target-score-setup {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  background: rgba(0, 0, 0, 0.8);
  border: 2px solid #39ff14;
  border-radius: 15px;
  padding: 20px;
  margin: 15px 0;
}

.target-score-setup label {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 16px;
  color: #39ff14;
  font-weight: 600;
}

.target-score-setup input {
  background: #0a0a0a;
  border: 2px solid #00bfff;
  border-radius: 8px;
  padding: 8px;
  color: #ffffff;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
  width: 120px;
}

/* AVATARY */
.player-avatars-section {
  display: flex;
  justify-content: center;
  gap: 25px;
  margin: 25px 0;
  flex-wrap: wrap;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.avatar-mini {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 3px solid #39ff14;
  object-fit: cover;
  transition: all 0.3s ease;
  opacity: 0.8;
  box-shadow: 0 0 15px rgba(57, 255, 20, 0.3);
}

.avatar-mini.active {
  opacity: 1;
  box-shadow: 0 0 25px #39ff14;
  transform: scale(1.15);
  border-width: 4px;
}

.avatar-name {
  font-size: 14px;
  color: #39ff14;
  font-weight: bold;
  text-align: center;
  text-shadow: 0 0 10px #39ff14;
}

/* MOD√ÅLY */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(5px);
}

.modal.hidden {
  display: none;
}

.modal-content {
  background: #0a0a0a;
  border: 2px solid #39ff14;
  border-radius: 15px;
  padding: 30px;
  max-width: 500px;
  width: 90%;
  text-align: center;
  box-shadow: 0 0 30px rgba(57, 255, 20, 0.5);
}

.modal-header h2 {
  color: #39ff14;
  margin: 0 0 20px 0;
}

.modal-actions {
  display: flex;
  gap: 15px;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 20px;
}

/* RESPONSIVE CHAT ADJUSTMENTS */
@media (max-width: 1200px) {
  .chat-panel {
    padding: 12px;
  }
  
  .chat-header h2 {
    font-size: 16px;
    margin-right: 35px;
  }
  
  .avatar-mini {
    width: 55px;
    height: 55px;
  }
}

@media (max-width: 900px) {
  .chat-panel {
    padding: 10px;
  }
  
  .chat-header h2 {
    font-size: 14px;
    margin-right: 30px;
  }
  
  .avatar-mini {
    width: 50px;
    height: 50px;
  }
  
  .player-avatars-section {
    gap: 20px;
  }
}

@media (max-width: 650px) {
  .chat-panel {
    height: 300px;
    padding: 15px;
  }
  
  .chat-panel.collapsed {
    width: 100%;
    height: 60px;
    max-height: 60px;
  }
  
  .main-layout {
    grid-template-rows: 1fr auto;
  }
  
  .avatar-mini {
    width: 45px;
    height: 45px;
  }
  
  .player-avatars-section {
    gap: 15px;
  }
}
