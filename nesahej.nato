/* Form control rozšíření */
.neon-input {
  background-color: rgba(0, 0, 0, 0.8);
  border: var(--border-neon-medium) solid var(--neon-green);
  color: var(--neon-green);
  box-shadow: inset var(--neon-glow);
}

.neon-input:focus {
  background-color: rgba(0, 0, 0, 0.9);
  border-color: var(--neon-blue);
  color: var(--neon-blue);
  box-shadow: inset var(--neon-glow), var(--neon-glow);
}

.neon-input::placeholder {
  color: rgba(0, 255, 0, 0.6);
}

/* Card rozšíření */
.neon-card {
  background-color: rgba(0, 0, 0, 0.8);
  border: var(--border-neon-medium) solid var(--neon-green);
  box-shadow: var(--neon-glow);
}

.neon-card .card-title {
  color: var(--neon-green);
  text-shadow: var(--neon-text-shadow);
}

/* ===================================================================
   3. NEONOVÉ UTILITY TŘÍDY
   ================================================================= */

/* Avatar card sizing utilities */
.avatar-card-container {
  min-width: 120px;
  max-width: 200px;
}

/* Chat container sizing utilities */
.chat-container-height {
  height: 200px;
}

/* Container width utilities */
.w-neon-90 {
  width: 90%;
}

/* Pro menší obrazovky */
@media (max-width: 576px) {
  .avatar-card-container {
    min-width: 100px;
    max-width: 150px;
  }
}

/* Text utilities */
.text-neon-green {
  color: var(--neon-green);
}

.text-neon-blue {
  color: var(--neon-blue);
}

.text-neon-purple {
  color: var(--neon-purple);
}

.text-neon-orange {
  color: var(--neon-orange);
}

.text-neon-red {
  color: var(--neon-red);
}

.text-neon-yellow {
  color: var(--neon-yellow);
}

/* Text glow effects */
.neon-text-glow {
  text-shadow: var(--neon-text-shadow);
}

.neon-text-glow-strong {
  text-shadow: var(--neon-glow-strong);
}

/* Alert neon utilities */
.alert-neon-green {
