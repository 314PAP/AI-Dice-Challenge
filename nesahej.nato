}

/* Border glow utilities */
.border-neon-glow {
  box-shadow: var(--neon-glow);
}

.border-neon-glow-strong {
  box-shadow: var(--neon-glow-strong);
}

/* Transition utilities */
.transition-all {
  transition: all 0.2s ease;
}

/* Cursor utilities */
.cursor-pointer {
  cursor: pointer;
}

/* Combined border + glow utilities */
.border-wide-neon-green {
  border: var(--border-neon-thick) solid var(--neon-green);
  box-shadow: inset var(--neon-glow), var(--neon-glow);
}

.border-wide-neon-blue {
  border: var(--border-neon-thick) solid var(--neon-blue);
  box-shadow: inset 0 0 10px rgba(var(--neon-blue-rgb), 0.3), 0 0 20px rgba(var(--neon-blue-rgb), 0.3);
}

/* Background utilities */
.bg-neon-glow-effect {
  background: radial-gradient(circle, rgba(var(--neon-green-rgb), 0.1), transparent);
}

/* Barevné varianty bg-neon-glow-effect */
.bg-neon-glow-effect-green {
  background: radial-gradient(circle, rgba(var(--neon-green-rgb), 0.1), transparent);
}

.bg-neon-glow-effect-blue {
  background: radial-gradient(circle, rgba(var(--neon-blue-rgb), 0.1), transparent);
}

.bg-neon-glow-effect-purple {
