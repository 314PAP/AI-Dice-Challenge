/* ===================================================================
   4. HERNÍ KOMPONENTY
   ================================================================= */

/* Kostky - mobile-first */
.neon-dice-container {
  width: 3rem;
  height: 3rem;
  display: inline-block;
  perspective: 200px;
}

.dice-face {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1a1a1a, #333);
  border: var(--border-neon-medium) solid var(--neon-green);
  border-radius: 0.5rem;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  position: relative;
  cursor: pointer;
  transition: all 0.3s ease;
}

.dice-face:hover {
  transform: rotateX(10deg) rotateY(10deg);
}

.neon-dice-glow {
  box-shadow: var(--neon-glow);
}

.dice-face.selected {
  border-color: var(--neon-blue);
  box-shadow: var(--neon-glow-strong);
  color: var(--neon-blue);
}

/* Dice dots */
.dice-dot {
  width: 0.3rem;
  height: 0.3rem;
  background-color: var(--neon-green);
  border-radius: 50%;
  box-shadow: 0 0 5px var(--neon-green);
  margin: 0.1rem;
}

.dice-face.selected .dice-dot {
  background-color: var(--neon-blue);
  box-shadow: 0 0 5px var(--neon-blue);
}

/* Dice face layouts */
.dice-face-1 .dice-dot:nth-child(1) { margin: auto; }
.dice-face-2 .dice-dot:nth-child(1) { align-self: flex-start; }
.dice-face-2 .dice-dot:nth-child(2) { align-self: flex-end; margin-left: auto; }
.dice-face-3 .dice-dot:nth-child(1) { align-self: flex-start; }
.dice-face-3 .dice-dot:nth-child(2) { margin: auto; }
.dice-face-3 .dice-dot:nth-child(3) { align-self: flex-end; margin-left: auto; }
.dice-face-4 .dice-dot:nth-child(1) { align-self: flex-start; }
.dice-face-4 .dice-dot:nth-child(2) { align-self: flex-start; margin-left: auto; }
.dice-face-4 .dice-dot:nth-child(3) { align-self: flex-end; }
.dice-face-4 .dice-dot:nth-child(4) { align-self: flex-end; margin-left: auto; }
.dice-face-5 .dice-dot:nth-child(1) { align-self: flex-start; }
.dice-face-5 .dice-dot:nth-child(2) { align-self: flex-start; margin-left: auto; }
.dice-face-5 .dice-dot:nth-child(3) { margin: auto; }
.dice-face-5 .dice-dot:nth-child(4) { align-self: flex-end; }
.dice-face-5 .dice-dot:nth-child(5) { align-self: flex-end; margin-left: auto; }

/* Chat komponenty */
.neon-chat-container {
  background-color: rgba(0, 0, 0, 0.8);
  border: var(--border-neon-medium) solid var(--neon-green);
  border-radius: 0.5rem;
  box-shadow: inset var(--neon-glow);
  padding: 1rem;
}

.neon-chat-messages {
  height: var(--chat-height-mobile);
  overflow-y: auto;
  border: 1px solid rgba(var(--neon-green-rgb, 0, 255, 0), 0.3);
  border-radius: 0.375rem;
  padding: 0.75rem;
  background-color: rgba(0, 0, 0, 0.6);
}

.neon-chat-message {
  margin-bottom: 0.75rem;
  padding: 0.5rem;
  border-radius: 0.375rem;
  word-wrap: break-word;
}

.neon-chat-message-ai {
  background-color: rgba(var(--neon-green-rgb), 0.1);
  border-left: var(--border-neon-thick) solid var(--neon-green);
  color: var(--neon-green);
}

.neon-chat-message-user {
  background-color: rgba(var(--neon-blue-rgb), 0.1);
  border-left: var(--border-neon-thick) solid var(--neon-blue);
  color: var(--neon-blue);
  margin-left: auto;
  max-width: 80%;
}

.neon-chat-input-group {
  display: flex;
  gap: 0.5rem;
  margin-top: 0.75rem;
}

.neon-chat-input-group .form-control {
  flex: 1;
}

/* ===================================================================
   5. LAYOUT A RESPONZIVITA (mobile-first)
   ================================================================= */

/* Loading screen */
.loading-z-index {
  z-index: var(--z-loading);
}

/* Chat container responsive */
.chat-scrollable {
  scrollbar-width: thin;
  scrollbar-color: var(--neon-blue) transparent;
}

.chat-scrollable::-webkit-scrollbar {
  width: 6px;
}

.chat-scrollable::-webkit-scrollbar-track {
  background: transparent;
}

.chat-scrollable::-webkit-scrollbar-thumb {
  background: var(--neon-blue);
  border-radius: 3px;
}

/* Bootstrap Mobile-First utilities */
.gap-xs-compact {
  gap: 0.25rem;
}

@media (max-width: 575.98px) {
  .btn-touch-spacing {
    min-height: 44px;
    padding: 0.5rem 1rem;
  }
  
  .menu-btn-uniform {
    min-width: 200px;
  }
}

/* Responsive utilities */
@media (min-width: 768px) {
  .neon-dice-container {
    width: 4rem;
    height: 4rem;
  }
  
  .dice-dot {
    width: 0.4rem;
    height: 0.4rem;
    margin: 0.15rem;
  }
}

@media (min-width: 992px) {
  .neon-dice-container {
    width: 5rem;
    height: 5rem;
  }
  
  .dice-dot {
    width: 0.5rem;
    height: 0.5rem;
    margin: 0.2rem;
  }
}

/* ===================================================================
   6. SCROLLBAR STYLING
   ================================================================= */

/* Custom scrollbars pro webkit browsers */
.neon-chat-messages::-webkit-scrollbar {
  width: 8px;
}

.neon-chat-messages::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 4px;
}

.neon-chat-messages::-webkit-scrollbar-thumb {
  background: linear-gradient(to bottom, var(--neon-green), var(--neon-blue));
  border-radius: 4px;
  box-shadow: inset 0 0 5px rgba(0, 255, 0, 0.5);
}

.neon-chat-messages::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(to bottom, var(--neon-blue), var(--neon-green));
}

/* Firefox scrollbar */
.neon-chat-messages {
  scrollbar-width: thin;
  scrollbar-color: var(--neon-green) rgba(0, 0, 0, 0.3);
}

/* ===================================================================
   7. ANIMACE A TRANSITIONS
   ================================================================= */

/* Hover animace pro interaktivní prvky */
.btn,
.neon-dice-container,
.neon-card {
  transition: all 0.3s ease;
}

/* Pulse animace pro důležité prvky */
@keyframes neon-pulse {
  0%, 100% { 
    box-shadow: var(--neon-glow); 
  }
  50% { 
    box-shadow: var(--neon-glow-strong); 
  }
}

.neon-pulse {
  animation: neon-pulse 2s infinite;
}

/* Reduced motion respekt */
@media (prefers-reduced-motion: reduce) {
  .neon-pulse {
    animation: none;
  }
  
  .btn,
  .neon-dice-container,
  .neon-card,
  .dice-face {
    transition: none;
  }
}

/* Button consistency helpers */
.btn-consistent-width {
  min-width: 200px;
}

@media (min-width: 768px) {
  .btn-consistent-width {
    min-width: 250px;
  }
}

/* Mobile control buttons */
.mobile-control-btn {
  min-width: 80px;
  padding: 0.375rem 0.5rem;
  font-size: 0.875rem;
}

.mobile-quit-btn {
  min-width: 150px;
  padding: 0.5rem 1rem;
}

/* ===================================================================
   8. UTILITY OVERRIDES (minimální, pouze kde nutné)
   ================================================================= */

/* Kurzor pointer pro interaktivní prvky (autocomplete) */
.cursor-pointer {
  cursor: pointer;
}

/* Bootstrap spinner barvy - jediny override */
.spinner-border.text-neon-green {
  border-color: var(--neon-green);
  border-right-color: transparent;
}

/* Ensure black background dominance */
.bg-black {
  background-color: #000000;
}

/* Zabránění FOUC (Flash of Unstyled Content) */
.d-none-until-loaded {
  display: none;
}

.loaded .d-none-until-loaded {
  display: block;
}

/* ===================================================================
   KONEC SOUBORU - 0 !important pravidel
   Bootstrap-first, mobile-first, utility-based design dokončen
   ================================================================= */
