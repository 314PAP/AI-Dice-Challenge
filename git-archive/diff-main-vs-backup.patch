+}
+
+.scrollbar-neon::-webkit-scrollbar-track {
+  background: rgba(0, 0, 0, 0.2);
+}
+
+.scrollbar-neon::-webkit-scrollbar-thumb {
+  background: rgba(var(--neon-green-rgb, 0, 255, 0), 0.5);
+  border-radius: 3px;
+}
