+/* =============================================================================
+   🎮 MINIMALISTICKÝ LAYOUT - Doplňkové styly pro minimalistický vzhled
+   ============================================================================= */
+
+/* 
+   Tento soubor obsahuje pouze minimální množství vlastních stylů,
+   které nejsou pokryté Bootstrap utility třídami.
+   
+   Pro většinu layoutu a stylování používejte přímo Bootstrap utility třídy v HTML.
+*/
+
+/* Utility třídy pro 90% velikost kontejneru */
+.mw-90 { max-width: 90% !important; }
+.mh-90 { max-height: 90% !important; }
+.vh-90 { height: 90vh !important; }
+
+/* Výškové třídy pro rozložení */
+.h-70 { height: 70% !important; }
+.h-30 { height: 30% !important; }
+.h-75 { height: 75% !important; }
+.h-20 { height: 20% !important; }
+
+/* Už nepoužíváme, ale necháme pro zpětnou kompatibilitu */
+.h-60 { height: 60% !important; }
+.h-40 { height: 40% !important; }
+
+/* Responzivní úpravy pro utility třídy */
+@media (max-width: 768px) {
+  .mw-90 { max-width: 95% !important; }
+  .mh-90 { max-height: 95% !important; }
+  .vh-90 { height: 95vh !important; min-height: 500px; }
+}
+
+@media (max-width: 576px) {
+  .mw-90 { max-width: 98% !important; }
+  .mh-90 { max-height: 98% !important; }
+  .vh-90 { height: 98vh !important; min-height: 450px; }
+}
+
+@media (max-height: 600px) {
+  .vh-90 { height: 100vh !important; min-height: auto; }
+}
+
+/* Utility třída pro skrývání prvků */
+.hidden { display: none !important; }
+
+/* Herní box - speciální efekty */
+.game-box {
+  border-radius: 8px;
+  transition: all 0.3s ease;
+  border: 1px solid rgba(var(--neon-green-rgb, 0, 255, 0), 0.3);
+}
+
+.game-box:hover {
+  box-shadow: 0 0 15px rgba(var(--neon-green-rgb, 0, 255, 0), 0.4);
+}
+
+/* Tenké scrollbary pro chat */
+.scrollbar-neon {
+  scrollbar-width: thin;
+  scrollbar-color: rgba(var(--neon-green-rgb, 0, 255, 0), 0.5) rgba(0, 0, 0, 0.2);
+}
+
+.scrollbar-neon::-webkit-scrollbar {
