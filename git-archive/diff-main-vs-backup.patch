+/**
+ * Responzivní layout pro AI Kostkovou Výzvu
+ * Zajišťuje správné zobrazení na mobilních zařízeních
+ */
+
+// Detekce typu zařízení
+export function detectDevice() {
+    const isSmallDevice = window.innerWidth < 768;
+    const isExtraSmallDevice = window.innerWidth <= 320 || window.innerHeight <= 480;
+    const isLandscape = window.innerWidth > window.innerHeight;
+    
+    return {
+        isSmallDevice,
+        isExtraSmallDevice,
+        isLandscape
+    };
+}
+
+// Aplikace tříd podle typu zařízení
+export function applyDeviceClasses() {
+    const { isSmallDevice, isExtraSmallDevice, isLandscape } = detectDevice();
+    
+    document.body.classList.toggle('small-device', isSmallDevice);
+    document.body.classList.toggle('xs-device', isExtraSmallDevice);
+    document.body.classList.toggle('landscape', isLandscape);
+    
+    // Přizpůsobení layoutu orientaci
+    const mobileContainer = document.getElementById('mobileFlex');
+    if (mobileContainer) {
+        mobileContainer.classList.toggle('flex-column', !isLandscape);
+        mobileContainer.classList.toggle('mobile-landscape-flex-row', isLandscape);
+    }
+}
+
+// Zajištění viditelnosti důležitých elementů
+export function ensureElementsVisibility() {
+    // Tlačítka
+    document.querySelectorAll('.btn, .btn-neon').forEach(btn => {
+        btn.style.opacity = '1';
+        btn.style.visibility = 'visible';
+    });
+    
+    // Chat a menu boxy
+    document.querySelectorAll('.game-box, .chat-box').forEach(box => {
+        box.style.opacity = '1';
+        box.style.visibility = 'visible';
+        box.style.display = 'block';
+    });
+    
+    // Chat zprávy
+    document.querySelectorAll('.chat-message').forEach(msg => {
+        msg.style.opacity = '1';
+        msg.style.visibility = 'visible';
+    });
+}
+
+// Vylepšení neonových efektů pro lepší viditelnost na malých zařízeních
+export function enhanceNeonEffects() {
+    const { isExtraSmallDevice } = detectDevice();
+    
+    if (isExtraSmallDevice) {
+        // Zesílení neonových efektů
+        document.querySelectorAll('.neon-green, .neon-blue, .neon-yellow, .neon-red, .neon-orange').forEach(el => {
+            el.style.textShadow = '0 0 8px currentColor, 0 0 15px currentColor';
+        });
+        
+        // Zvýraznění rámečků
+        document.querySelectorAll('.game-box, .chat-box').forEach(box => {
+            box.style.borderWidth = '2px';
+            box.style.boxShadow = '0 0 10px var(--neon-green), 0 0 20px var(--neon-green)';
+        });
+        
+        // Zvýraznění tlačítek
+        document.querySelectorAll('.btn-neon').forEach(btn => {
+            btn.style.borderWidth = '2px';
+            btn.style.boxShadow = '0 0 8px currentColor, 0 0 15px currentColor';
+            btn.style.textShadow = '0 0 5px currentColor';
+        });
+    }
+}
+
+// Inicializace responzivního layoutu
+export function initResponsiveLayout() {
+    // Aplikace tříd při načtení
+    applyDeviceClasses();
+    
+    // Sledování změn orientace a velikosti okna
+    window.addEventListener('resize', applyDeviceClasses);
+    window.addEventListener('orientationchange', () => {
+        setTimeout(applyDeviceClasses, 100); // Timeout pro správné získání rozměrů
+    });
+    
+    // Zajištění viditelnosti elementů
+    setTimeout(ensureElementsVisibility, 500);
+    setTimeout(enhanceNeonEffects, 800);
+    
+    // Pravidelná kontrola viditelnosti
+    setInterval(ensureElementsVisibility, 2000);
+}
