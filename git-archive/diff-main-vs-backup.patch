+
+document.addEventListener('DOMContentLoaded', function() {
+    // Detekce typu zařízení a orientace
+    function detectDeviceAndOrientation() {
+        const width = window.innerWidth;
+        const height = window.innerHeight;
+        const isLandscape = width > height;
+        
+        // Třída pro mobilní zařízení
+        if (width < 768) {
+            document.body.classList.add('mobile-device');
+            
+            // Třída pro malá mobilní zařízení
+            if (width <= 480) {
+                document.body.classList.add('xs-mobile');
+            } else {
+                document.body.classList.remove('xs-mobile');
+            }
+            
+            // Třída pro extrémně malá zařízení
+            if (width <= 320 || height <= 480) {
+                document.body.classList.add('xxs-device');
+            } else {
+                document.body.classList.remove('xxs-device');
+            }
+        } else {
+            document.body.classList.remove('mobile-device', 'xs-mobile', 'xxs-device');
+        }
+        
+        // Třída pro landscape/portrait orientaci
+        document.body.classList.toggle('landscape-orientation', isLandscape);
+        document.body.classList.toggle('portrait-orientation', !isLandscape);
+        
+        // Výpis informací do konzole pro debugging
+        console.log(`📱 Zařízení: ${width}x${height}px, Orientace: ${isLandscape ? 'landscape' : 'portrait'}`);
+    }
+    
+    // Okamžité spuštění detekce
+    detectDeviceAndOrientation();
+    
+    // Nastavení event listenerů pro změny velikosti a orientace
