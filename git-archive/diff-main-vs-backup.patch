+ * podporu pro animace a neonové efekty
+ */
+
+/* Základní neonové efekty a barvy */
+:root {
+  --neon-green: #39ff14;
+  --neon-blue: #4d4dff;
+  --neon-yellow: #ffff00;
+  --neon-red: #ff3131;
+  --neon-orange: #ff9900;
+  --neon-glow: 0 0 5px var(--neon-green), 0 0 10px var(--neon-green);
+  --neon-glow-strong: 0 0 8px var(--neon-green), 0 0 15px var(--neon-green), 0 0 20px var(--neon-green);
+  --neon-glow-blue: 0 0 5px var(--neon-blue), 0 0 10px var(--neon-blue);
+  --neon-glow-yellow: 0 0 5px var(--neon-yellow), 0 0 10px var(--neon-yellow);
+  --neon-glow-red: 0 0 5px var(--neon-red), 0 0 10px var(--neon-red);
+  --neon-glow-orange: 0 0 5px var(--neon-orange), 0 0 10px var(--neon-orange);
+  --border-radius: 0.375rem;
+  
+  /* Proměnné pro responzivitu */
+  --default-padding: 1rem;
+  --sm-padding: 0.75rem;
+  --xs-padding: 0.5rem;
+  --xxs-padding: 0.25rem;
+  
+  --default-gap: 1rem;
+  --sm-gap: 0.75rem;
+  --xs-gap: 0.5rem;
+  --xxs-gap: 0.25rem;
+  
+  --btn-min-height: 2.5rem;
+  --btn-sm-min-height: 2rem;
+  --btn-xs-min-height: 1.75rem;
+  
+  --input-height: 2.25rem;
+  --input-sm-height: 1.75rem;
+  --input-xs-height: 1.5rem;
+}
+
+/* Velikost kontejneru 90% viewportu */
+.vh-90 {
+  height: 90vh;
+  max-height: 90vh;
+}
+.vw-90 {
+  width: 90vw;
+  max-width: 90vw;
+}
+
+/* Herní box a chat box - neonové rámečky */
+.game-box, .chat-box {
+  border: 2px solid var(--neon-green);
+  border-radius: var(--border-radius);
+  box-shadow: var(--neon-glow);
+  background-color: rgba(0, 0, 0, 0.9);
+  padding: var(--default-padding);
+  overflow: hidden;
+  transition: all 0.3s ease;
+  position: relative;
+  z-index: 1;
+}
+
+/* Vylepšený hover efekt s jemným světlem uvnitř */
+.game-box:hover, .chat-box:hover {
+  box-shadow: var(--neon-glow-strong);
+}
+
+/* Přidání pseudo prvku pro jemný neonový efekt uvnitř při hoveru */
+.game-box::before, .chat-box::before {
+  content: '';
+  position: absolute;
+  top: 0;
+  left: 0;
+  width: 100%;
+  height: 100%;
+  background: radial-gradient(
+    circle at center,
+    rgba(57, 255, 20, 0.03) 0%,
+    rgba(0, 0, 0, 0) 70%
+  );
+  opacity: 0;
+  z-index: -1;
+  transition: opacity 0.5s ease;
+}
+
+.game-box:hover::before, .chat-box:hover::before {
+  opacity: 1;
+}
+
+/* Chat kontejnery */
+.chat-container {
+  display: flex;
+  flex-direction: column;
+  height: 100%;
+}
